@model PainelIndoor.Application.Core.Services.Paineis.ViewModels.PaineisInicio

@{
    ViewData["Title"] = "Paineis";
}

    <div class="row">

        <div class="col-md-12">

            <form id="frm-pesquisa" method="post" data-parsley-validate role="form">

                <div class="row">

                    <div class="col-md-6">

                    </div>

                    <div class="form-group col-md-6">

                        <label>Pesquisa</label>

                        <div class="input-group">

                        <input asp-for="ParametrosPesquisa.TextoPesquisa" name="TextoPesquisa" class="form-control" placeholder="Procurar">

                            <span class="input-group-btn">

                            <button type="button" onclick="pesquisarMonitores('@Model.ParametrosPesquisa.PaginaAtual');return false" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                            
                            </span>

                        </div>

                    </div>

                </div>

            </form>

        </div>

    </div>


<div class="row" style="display: block;">

    <div class="col-md-12 text-uppercase">

        <h4>@ViewData["Title"]</h4>

    </div>

    <div class="col-md-12" id="lista-monitores">

        <partial name="_painel_listar" model="Model" />

    </div>

</div>

<partial name="_painel_adicionar" model="Model.Adicionar" />

<partial name="_painel_alterar" model="Model.Alterar" />

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script type="text/javascript" src="~/js/paineis-gestao.js"></script>

}



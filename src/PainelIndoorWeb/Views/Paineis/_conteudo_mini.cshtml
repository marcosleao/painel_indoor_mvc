            @Html.Raw(item.Caminho)
        </div>
            }
    </div>
    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#slideImagens" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Voltar</span>
    </a>
    <a class="carousel-control-next" href="#slideImagens" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>
}
else if (Model.TipoConteudo == TipoConteudo.PaginaBi)
{
<div id="slidePowerBi" class="carousel slide" data-ride="carousel" style="margin:0;padding:0;">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <p class="texto-centro">PELO FUTURO DO TRABALHO</p>
        </div>

        @foreach (var item in Model.Conteudos.Where(t => t.TipoConteudo == Model.TipoConteudo && t.MonitorId == Model.Id && t.IsEnabled == true))
            {
        <div class="carousel-item">
            @Html.Raw(item.Caminho)
        </div>
            }
    </div>
    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#slidePowerBi" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Voltar</span>
    </a>
    <a class="carousel-control-next" href="#slidePowerBi" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>
}
else if (Model.TipoConteudo == TipoConteudo.Outros)
{
    foreach (var item in Model.Conteudos.Where(t => t.TipoConteudo == Model.TipoConteudo && t.MonitorId == Model.Id && t.IsEnabled == true))
    {
<partial name="@item.Caminho" />
    }
}
